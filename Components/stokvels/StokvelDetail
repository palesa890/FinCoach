import React from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { ArrowLeft, Users, Calendar, DollarSign, Shield, UserPlus } from "lucide-react";

export default function StokvelDetail({ stokvel, currentUser, onBack, onUpdate, onJoin }) {
  const isMember = stokvel.admin_id === currentUser?.email || stokvel.members?.includes(currentUser?.email);
  const isAdmin = stokvel.admin_id === currentUser?.email;

  // Privacy: Only show username (email prefix), never full email or other personal data
  const getUserDisplayName = (email) => {
    if (!email) return "Unknown";
    const username = email.split('@')[0];
    return username.charAt(0).toUpperCase() + username.slice(1);
  };

  // Privacy: Only show trust score for current user
  const getTrustScoreDisplay = (email) => {
    if (email === currentUser?.email) {
      return currentUser?.trust_score || 100;
    }
    return "Private";
  };

  const handleJoin = () => {
    if (onJoin) {
      onJoin(stokvel);
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100">
      <div className="p-4 md:p-8">
        <div className="max-w-4xl mx-auto">
          <div className="flex items-center gap-4 mb-8">
            <Button variant="outline" onClick={onBack}>
              <ArrowLeft className="w-4 h-4 mr-2" />
              Back
            </Button>
          </div>

          <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div className="lg:col-span-2 space-y-6">
              <Card className="glass-effect shadow-lg border-0">
                <CardHeader>
                  <div className="flex justify-between items-start">
                    <div>
                      <CardTitle className="text-2xl mb-2">{stokvel.name}</CardTitle>
                      <Badge className="bg-purple-100 text-purple-800">
                        {stokvel.status}
                      </Badge>
                    </div>
                    {isAdmin && (
                      <Badge variant="outline" className="bg-amber-50 text-amber-700">
                        Administrator
                      </Badge>
                    )}
                  </div>
                </CardHeader>
                <CardContent>
                  <p className="text-slate-600">{stokvel.description}</p>
                </CardContent>
              </Card>

              <Card className="glass-effect shadow-lg border-0">
                <CardHeader>
                  <CardTitle>Members & Trust Scores</CardTitle>
                </CardHeader>
                <CardContent>
                  <div className="space-y-3">
                    {/* Administrator */}
                    <div className="flex items-center justify-between p-4 bg-gradient-to-r from-purple-50 to-amber-50 rounded-lg border border-purple-200">
                      <div className="flex items-center gap-3">
                        <div className="w-12 h-12 bg-gradient-to-br from-purple-600 to-purple-700 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg">
                          {getUserDisplayName(stokvel.admin_id).charAt(0)}
                        </div>
                        <div>
                          <p className="font-semibold text-slate-800">{getUserDisplayName(stokvel.admin_id)}</p>
                          <div className="flex items-center gap-2 text-xs">
                            <Badge variant="outline" className="bg-amber-50 text-amber-700 border-amber-200">
                              Administrator
                            </Badge>
                            <span className="text-slate-500">â€¢</span>
                            <span className="text-slate-600">Trust: {getTrustScoreDisplay(stokvel.admin_id)}</span>
                          </div>
                        </div>
                      </div>
                      <Shield className="w-6 h-6 text-amber-500" />
                    </div>
                    
                    {/* Regular Members */}
                    {stokvel.members && stokvel.members.length > 0 ? (
                      stokvel.members.map((member, index) => (
                        <div key={index} className="flex items-center justify-between p-4 bg-slate-50 rounded-lg border border-slate-200 hover:bg-slate-100 transition-colors">
                          <div className="flex items-center gap-3">
                            <div className="w-12 h-12 bg-gradient-to-br from-slate-400 to-slate-500 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-md">
                              {getUserDisplayName(member).charAt(0)}
                            </div>
                            <div>
                              <p className="font-medium text-slate-800">{getUserDisplayName(member)}</p>
                              <div className="flex items-center gap-2 text-xs text-slate-600">
                                <Badge variant="outline" className="text-xs">
                                  Member
                                </Badge>
                                <span>â€¢</span>
                                <span>Trust: {getTrustScoreDisplay(member)}</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      ))
                    ) : (
                      <div className="text-center py-6 text-slate-500">
                        No other members yet. Be the first to join!
                      </div>
                    )}
                  </div>

                  {/* Privacy Notice */}
                  <div className="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                    <h4 className="font-medium text-blue-800 mb-2 flex items-center gap-2">
                      <Shield className="w-4 h-4" />
                      Privacy Protection
                    </h4>
                    <p className="text-xs text-blue-700">
                      ðŸ”’ Only usernames and trust scores are visible to protect member privacy. Full names, emails, and personal information are kept confidential and never shared with other members.
                    </p>
                  </div>
                </CardContent>
              </Card>
            </div>

            <div className="space-y-6">
              <Card className="glass-effect shadow-lg border-0">
                <CardHeader>
                  <CardTitle className="text-lg">Group Details</CardTitle>
                </CardHeader>
                <CardContent className="space-y-4">
                  <div>
                    <div className="flex items-center gap-2 text-slate-600 mb-1">
                      <DollarSign className="w-4 h-4" />
                      <span className="text-sm">Contribution Amount</span>
                    </div>
                    <p className="text-xl font-bold">R{stokvel.contribution_amount?.toLocaleString()}</p>
                  </div>

                  <div>
                    <div className="flex items-center gap-2 text-slate-600 mb-1">
                      <Calendar className="w-4 h-4" />
                      <span className="text-sm">Frequency</span>
                    </div>
                    <p className="text-lg font-medium capitalize">{stokvel.frequency}</p>
                  </div>

                  <div>
                    <div className="flex items-center gap-2 text-slate-600 mb-1">
                      <Users className="w-4 h-4" />
                      <span className="text-sm">Members</span>
                    </div>
                    <p className="text-lg font-medium">
                      {stokvel.current_members}/{stokvel.max_members}
                    </p>
                  </div>

                  <div>
                    <div className="flex items-center gap-2 text-slate-600 mb-1">
                      <DollarSign className="w-4 h-4" />
                      <span className="text-sm">Total Pool</span>
                    </div>
                    <p className="text-xl font-bold text-emerald-600">
                      R{stokvel.total_pool?.toLocaleString() || 0}
                    </p>
                  </div>

                  {!isMember && stokvel.status === "recruiting" && (
                    <Button 
                      className="w-full bg-purple-600 hover:bg-purple-700 mt-4"
                      onClick={handleJoin}
                    >
                      <UserPlus className="w-4 h-4 mr-2" />
                      Join Stokvel
                    </Button>
                  )}
                </CardContent>
              </Card>

              <Card className="glass-effect shadow-lg border-0">
                <CardHeader>
                  <CardTitle className="text-lg">How It Works</CardTitle>
                </CardHeader>
                <CardContent>
                  <ol className="text-sm text-slate-600 space-y-2">
                    <li>1. Members contribute {stokvel.frequency}</li>
                    <li>2. One member receives full pool each round</li>
                    <li>3. Rotate until everyone has received</li>
                    <li>4. Trust scores track reliability</li>
                    <li>5. All personal data remains private</li>
                  </ol>
                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}